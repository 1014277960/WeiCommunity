<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_bar"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="10dp"
    android:background="@color/post_bottom_bg"
    android:layout_alignParentBottom="true"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/bottom_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/post_bottom_picture" />

    <ImageView
        android:id="@+id/bottom_at"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/post_bottom_at" />

    <ImageView
        android:id="@+id/bottom_topic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/post_bottom_topic" />

    <ImageView
        android:id="@+id/bottom_emoji"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/post_bottom_emoji" />

    <ImageView
        android:id="@+id/bottom_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/post_bottom_more" />

</LinearLayout>