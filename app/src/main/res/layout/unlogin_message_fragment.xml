<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_unlogin_message" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@drawable/unlogin_message_bg"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="75dp"
        android:text="登陆后，别人评论你的微博，给你发消息，都会在这里收到通知"
        android:textColor="@color/unlogin_bg_text_bg"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_marginRight="14dp"
            android:text="注册"
            android:textColor="@color/register_origin"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/unlogin_button_bg"
            android:onClick="openLogin"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:text="登录"
            android:textColor="@color/login_color"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/unlogin_button_bg"
            android:onClick="openLogin"/>

    </LinearLayout>

</LinearLayout>